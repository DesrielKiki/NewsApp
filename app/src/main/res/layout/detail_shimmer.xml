<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/bg_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_171sdp"
                    android:layout_marginStart="0dp">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_newsThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_171sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/dark2"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/ic_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/interBoldHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bg_thumb"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark2" />

                <RelativeLayout
                    android:id="@+id/bg_newsDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bg_thumb"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_newsCategory"
                        style="@style/inter8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/dark2"
                        android:text="----------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_newsTitle"
                        style="@style/inter8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_newsCategory"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/dark2"
                        android:text="-------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_newsCreatedDate"
                        style="@style/inter8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_newsTitle"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/dark2"
                        android:text="-----------------------"
                        android:textColor="@color/dark2" />

                    <View
                        android:id="@+id/Separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark2"
                        android:layout_below="@id/tv_newsCreatedDate"
                        android:layout_marginTop="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tv_description"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Separator"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/dark2"
                        android:text="------------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description2"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@color/dark2"
                        android:text="--------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description3"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/dark2"
                        android:text="-----------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description4"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description3"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@color/dark2"
                        android:text="-------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description5"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description4"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/dark2"
                        android:text="----------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description6"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description5"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@color/dark2"
                        android:text="--------------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description7"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description6"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/dark2"
                        android:text="---------------------------------------------------------"
                        android:textColor="@color/dark2" />

                    <TextView
                        android:id="@+id/tv_description8"
                        style="@style/interBold10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description7"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@color/dark2"
                        android:text="---------------------------------------------------"
                        android:textColor="@color/dark2" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>